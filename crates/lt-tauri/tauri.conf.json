{
  "productName": "Localtype",
  "identifier": "com.localtype.app",
  "build": {
    "beforeDevCommand": "npm --prefix /Users/hydai/workspace/vibe/localtype/ui run dev",
    "devUrl": "http://localhost:5173",
    "beforeBuildCommand": "npm --prefix /Users/hydai/workspace/vibe/localtype/ui run build",
    "frontendDist": "../../ui/dist"
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "publisher": "Localtype",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "macOS": {
      "minimumSystemVersion": "10.15"
    }
  },
  "app": {
    "windows": [
      {
        "title": "Localtype",
        "label": "main",
        "width": 600,
        "height": 200,
        "decorations": false,
        "transparent": true,
        "alwaysOnTop": true,
        "skipTaskbar": true,
        "resizable": true,
        "center": true,
        "dragDropEnabled": false
      }
    ],
    "security": {
      "csp": null
    }
  },
  "plugins": {
    "globalShortcut": {
      "shortcuts": ["Cmd+Shift+Space"]
    }
  }
}
